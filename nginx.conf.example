# Configuration Nginx pour Bataille Navale
# Placez ce fichier dans /etc/nginx/sites-available/bataille-navale
# Puis créez un lien symbolique : sudo ln -s /etc/nginx/sites-available/bataille-navale /etc/nginx/sites-enabled/

server {
    listen 80;
    server_name votre-domaine.com www.votre-domaine.com;  # Remplacez par votre domaine

    # Redirection HTTP vers HTTPS (décommentez après avoir configuré SSL)
    # return 301 https://$server_name$request_uri;

    # Pour le développement sans SSL, utilisez cette configuration :
    location / {
        proxy_pass http://localhost:4000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
    }

    # Configuration pour Socket.io
    location /socket.io/ {
        proxy_pass http://localhost:4000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}

